<div class="snippetAll">
{{!-- DISPLAY POST --}}
<div class="snippetDiv">
  <div>
    <h2>
      {{title}}
    </h2>
    <p>Created by {{user.username}} on {{format_date createdAt}}</p>
  </div>
  <div class="code-editor">
    <pre class="code-snippet editor">{{restoreContent code}}</pre>
  </div>




{{!-- EDIT POST IF BELONGS TO USER --}}
{{#if is_own_post}}
  <div class="btnDiv">
    <div>
      <a href='/profile/update/{{id}}'><button class="update-snippet-button" type="submit">Update</button></a>
    </div>

    <div>
      <button class="delete-snippet-button" type="submit" data-snippet-id="{{id}}">Delete</button>
    </div>
  </div>
{{/if}}
</div>



{{!-- DISPLAY COMMENTS --}}
<div class="commentDiv">
  <h2>Comments:</h2>
  {{#each comments as |comment|}}
    <div class="userComment">
      <pre class="code-snippet">{{{restoreContent comment.comment}}}</pre>
      <p>-- {{format_date comment.createdAt}}</p>
    </div>
  {{/each}}
</div>



{{!-- ADD COMMENT --}}
{{#if logged_in}}
  <div class="addCommentDiv">
    <h2>Add a comment:</h2>

    <form class="new-comment-form">
      <div>
        <textarea id="comment-content" name="comment-content" placeholder="Your Comment Here"></textarea>
      </div>
      <input type="hidden" id="snippet-id" value="{{id}}">
      <div>
        <button class="commentBtn" type="submit">Create</button>
      </div>
    </form>
  </div>
{{else}}
  <div class="loginSnippet">
    <h2>Login in to add your own comments.</h2>
    <form action="/login">
         <button class="loginbtn" type="submit">Login</button>
      </form>
  </div>
{{/if}}
</div>

